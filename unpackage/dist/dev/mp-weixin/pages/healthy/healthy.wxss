
.content {
	background-color: white;
	width: 100%;
	display: flex;
	flex-direction: row;
	flex-wrap: wrap;
	align-items: center;
	justify-content: center;
}
.top {
	width: 100%;
	height: 150px;
	background-color: #1B77FB;
	z-index: 999;
	border-radius: 0 0 50px 50px;
}
.title {
	color: white;
	font-size: 30px;
	margin-left: 20px;
	font-family: KaiTi;
	margin-top: 20px;
}
.smalltitle {
	font-size: 19px;
	margin-top: 15px;
	margin-left: 50px;
}
.btn {
	width: 90%;
	margin-top: 20px;
	margin-bottom: 20px;
	/* margin-left: 3%; */
}
.main {
	width: 100%;
	height: 600px;
	background-color: white;
	display: flex;
	flex-direction: column;
	align-items: center;
}
.kapian {
	width: 90%;
	height: 120px;
	margin-top: 20px;
	background-color: #FFFFFF;
	box-shadow: 0px 4px 10px 0px rgba(0, 0, 0, 0.1);
	background-color: white;
	border-radius: 10px;
	display: flex;
	flex-direction: row;
}
.imgs {
	width: 90px;
	height: 90px;
	margin: 10px;
	border-radius: 15px;
}
.kapian-main {
	width: 70%;
	height: 110px;
}
.small-title {
	margin: 10px;
	font-weight: bold;
	font-size: 17px;
}
.intro {
	margin-left: 10px;
	margin-right: 10px;
	font-size: 15px;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	/* 设置显示的行数 */
	-webkit-box-orient: vertical;
	overflow: hidden;
	text-overflow: ellipsis;
	color: #7A7F7F;
}
.blue{
	color: #1B77FB ;
	font-weight: bold;
	position: relative;
	left: 160px;
	top: 4px;
}

